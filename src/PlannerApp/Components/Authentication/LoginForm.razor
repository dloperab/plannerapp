@namespace PlannerApp.Components

<EditForm Model="_model" OnValidSubmit="LoginAsync">
  <DataAnnotationsValidator />
  <MudCard>
    <MudCardHeader>
      <CardHeaderContent>
        <MudText Typo="Typo.h6">Welcome to PlannerApp</MudText>
      </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
      <MudTextField Label="Email" HelperText="Required" 
                    @bind-Value="_model.Email" For="@(() => _model.Email)" />
      <MudTextField Label="Password" HelperText="Required" Class="mt-3"
                    InputType="InputType.Password" @bind-Value="_model.Password" 
                    For="@(() => _model.Password)" />
    </MudCardContent>
    <MudCardActions>
      <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Login</MudButton>
      <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Class="ml-1">Register</MudButton>
    </MudCardActions>
  </MudCard>

  <ValidationSummary />
</EditForm>